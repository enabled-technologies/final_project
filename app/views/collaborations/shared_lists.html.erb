<div class="page-header">
  <h1>
    Shared Lists
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>List Name</th>
        <th>Owner</th>
        <th>Due</th>
        <th>Prioriti</th>
        <th>Actions</th>
      </tr>

      <% @collaboration.each do |collaboration| %>
      <tr>
        <td><a href="/lists/<%= collaboration.list_id %>"><%= List.where(:id => collaboration.list_id).pluck(:name).to_sentence %></a></td>
        <td><%= collaboration.list.user.email %></td>
        <td><%= collaboration.list.duedate %></td>
        <td><%= collaboration.list.prioriti %></td>
        <td>
          
          <a href="/delete_collaboration/<%= collaboration.id %>" class="btn btn-danger">Remove</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
