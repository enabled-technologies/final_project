<div class="page-header">
  <h1>
    Lists
    <a href="/lists/new" class="btn btn-lg btn-success">New List</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Prioriti</th>
        <th>Duedate</th>
        <th>Status</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.category %></td>
        <td><%= list.prioriti %></td>
        <td><%= list.duedate %></td>
        <td><%= list.status %></td>
        <td><%= list.user_id %></td>
        <td>
          <a href="/lists/<%= list.id %>" class="btn btn-primary">Show</a>
          <a href="/lists/<%= list.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_list/<%= list.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
