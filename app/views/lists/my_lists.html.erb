<div class="page-header">
  <h1>
    My Lists
    
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>List Name</th>
        <th>Category</th>
        <th>Status</th>
        <th>Duedate</th>
        <th>Prioriti</th>
        <th>Actions</th>
      </tr>

      <% @my_lists.order(:prioriti).each do |list| %>
      <tr>
        <td><a href="/lists/<%= list.id %>"><font color="blue"></font><%= list.name %></font></a></td>
        <td><%= list.category %></td>
        <td><%= list.status %></td>
        <td><%= list.duedate %></td>
        <td><%= list.prioriti %></td>
        <td>
          
          <a href="/lists/<%= list.id %>/edit_from_my_lists" class="btn btn-warning">Edit</a>
          <a href="/delete_list/<%= list.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <a href="/lists/new" class="btn btn-lg btn-success">Add List</a>
  </div>
</div>


