<!-- Validation failure messages -->
<% if @subtask.errors.any? %>
  <% @subtask.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Subtask</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_subtask" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @subtask.name %>">
      </div>

      <!-- Label and input for prioriti -->
      <div class="form-group">
        <label for="prioriti" class="control-label">
          Prioriti
        </label>

        <input type="text" id="prioriti" name="prioriti" placeholder="1, 2, 3..." class="form-control" value="<%= @subtask.prioriti %>">
      </div>

      <!-- Label and input for duedate -->
      <div class="form-group">
        <label for="duedate" class="control-label">
          Duedate
        </label>

        <input type="datetime-local" id="duedate" name="duedate" placeholder="Duedate" class="form-control" value="<%= @subtask.duedate %>">
      </div>

      <!-- Label and input for status -->
      <div class="form-group">
        <label for="status" class="control-label">
          Status
        </label>

        <%= select_tag(:status, options_for_select([['Not Started'], ['In Progress'], ['Completed']], @subtask.status), :class => "form-control") %>
      </div>

      <!-- nput for task_id -->
      <div class="form-group">

        <input type="hidden" id="task_id" name="task_id" placeholder="Task" class="form-control" value="<%= @subtask.task_id %>">
      </div>

      <button class="btn btn-success">
        Create Subtask
      </button>
      or
      <a href="/subtasks">Cancel</a>
    </form>
  </div>
</div>
