<!-- Validation failure messages -->
<% if @task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Update Task: <%= @task.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_task/<%= @task.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @task.name %>">
      </div>

      <!-- Label and input for prioriti -->
      <div class="form-group">
        <label for="prioriti" class="control-label">
          Prioriti
        </label>

        <input type="text" id="prioriti" name="prioriti" placeholder="1, 2, 3..." class="form-control" value="<%= @task.prioriti %>">
      </div>

      <!-- Label and input for duedate -->
      <div class="form-group">
        <label for="duedate" class="control-label">
          Duedate
        </label>

        <input type="datetime" id="duedate" name="duedate" placeholder="Duedate" class="form-control" value="<%= @task.duedate %>">
      </div>

      <!-- Label and input for status -->
      <div class="form-group">
        <label for="status" class="control-label">
          Status
        </label>

        <%= select_tag(:status, options_for_select([['Not Started'], ['In Progress'], ['Completed']], @task.status), :class => "form-control") %>
      </div>

      <!-- Label and input for list_id -->
      <div class="form-group">

        <input type="hidden" id="list_id" name="list_id" placeholder="List" class="form-control" value="<%= @task.list_id %>">
      </div>

      <button class="btn btn-success">
        Update
      </button>
      or
      <a href="/tasks/<%= @task.id %>">Cancel</a>
    </form>
  </div>
</div>
